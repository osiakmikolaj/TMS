@page
@model TMS.RazorPages.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Dodaj nowego użytkownika</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa użytkownika</th>
            <th>Email</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Rola</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Role</td>
                <td>
                    <div class="btn-group">
                        <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info">Edytuj</a>
                        <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Szczegóły</a>
                        <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>