@page
@model TMS.RazorPages.Pages.Admin.GrpcClient.IndexModel
@{
    ViewData["Title"] = "Klient gRPC";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-info">
    Ta strona demonstruje komunikację z usługą gRPC do zarządzania zgłoszeniami.
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista zgłoszeń (pobrana przez gRPC)</h5>
    </div>
    <div class="card-body">
        @if (Model.Tickets.Count > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tytuł</th>
                        <th>Status</th>
                        <th>Projekt</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.Tickets)
                    {
                        <tr>
                            <td>@ticket.Id</td>
                            <td>@ticket.Title</td>
                            <td>@ticket.Status</td>
                            <td>@ticket.ProjectName</td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">Szczegóły</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Brak zgłoszeń do wyświetlenia.
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Create" class="btn btn-primary">Dodaj nowe zgłoszenie (gRPC)</a>
    <a asp-page="/Admin/Index" class="btn btn-secondary">Powrót do panelu administratora</a>
</div>